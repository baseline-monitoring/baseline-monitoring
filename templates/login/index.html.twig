{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">{{ 'baseline_monitoring.user_management.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">{{ 'baseline_monitoring.user_management.login.password'|trans }}</label>
        <input type="password" id="password" name="_password"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <button type="submit">{{ 'baseline_monitoring.user_management.login.action'|trans }}</button>
    </form>
{% endblock %}
